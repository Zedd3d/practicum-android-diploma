<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:minHeight="@dimen/filter_element_height"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_6dp"
        android:paddingEnd="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_6dp">

        <TextView
            android:id="@+id/smallTextBlock"
            style="@style/SmallTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/BlackDay_WhiteNight"
            tools:text="@string/filter_workplace" />

        <TextView
            android:id="@+id/standardTextBlock"
            style="@style/StandartTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fixed_text_selector"
            tools:text="Автокомпоненты, запчасти, шины (продвижение торговля и разное другое с кисточкой даже не видно)" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivBtnGo"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_12dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/ic_arrow_forward"
        app:tint="?colorPrimary" />

    <ImageView
        android:id="@+id/ivBtnClear"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_12dp"
        android:layout_weight="0"
        app:srcCompat="@drawable/ic_clear"
        app:tint="?colorPrimary" />

</LinearLayout>
