<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rounded_12">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="toolbarTitle">
        <item name="titleTextColor">?colorPrimary</item>
        <item name="titleTextAppearance">@style/TitleTextStyle</item>
    </style>

    <style name="inputTextLayoutStyle">
        <item name="hintEnabled">false</item>
    </style>

    <style name="inputTextEditStyle">
        <item name="android:textColor">@color/BlackUniversal_yp</item>
        <item name="hintTextAppearance">@style/StandartTextStyle</item>
        <item name="android:textAppearance">@style/StandartTextStyle</item>
        <item name="android:background">@drawable/background_corners12</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
    </style>

    <style name="inputTextEditStyleDayNight" parent="inputTextEditStyle">
        <item name="android:textColorHint">@color/Gray_yp</item>
        <item name="android:backgroundTint">@color/LightGray_yp</item>
        <item name="android:drawableTint">@color/BlackUniversal_yp</item>
    </style>

    <style name="BoldTitleTextStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="LowTitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="StandartTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="StandartButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_corners12</item>
        <item name="backgroundTint">@color/standart_button_selector</item>
        <item name="android:textColor">@color/standart_text_button_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="FavoriteButtonStyle">
        <item name="android:src">@drawable/favorite_vacancy_drawable_empty</item>
    </style>

</resources>
